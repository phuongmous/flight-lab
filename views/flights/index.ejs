<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No</th>
            <th>Departs</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(flight) { %>
            <tr>
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departs %></td>
                <td><a href="/flights/<%= flight._id %>">DETAILS</td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/header') %>